package moussa.tuto.jackson.json;

import java.io.File;

import com.fasterxml.jackson.databind.ObjectMapper;

public class Driver {

	public static void main(String[] args) {

		try {
			// create mapper
			ObjectMapper mapper = new ObjectMapper();
			
			// read file to map/convert to java  simple POJO
			Student mappedStudent1 = mapper.readValue(new File("data/sample-lite.json"), Student.class);
			System.out.println("+++ simple json +++ " + mappedStudent1.toString());
			

			// read file to map/convert to java  POJO with nested PoJO and array
			Student mappedStudent2 = mapper.readValue(new File("data/sample-full.json"), Student.class);
			System.out.println("+++ simple json +++ " + mappedStudent2.toString());
			

		
		} catch (Exception e) {
			e.printStackTrace();
		}

	}

}
